{
  "name": "@vtex/renovate-config",
  "version": "1.6.17",
  "description": "A plugin that holds the Renovate preset config for updating VTEX dependencies in our stores",
  "author": "VTEX",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vtex/faststore",
    "directory": "packages/renovate-config"
  },
  "renovate-config": {
    "default": {
      "extends": [
        "config:base",
        ":timezone(America/Sao_Paulo)"
      ],
      "labels": [
        "renovate",
        "faststore"
      ],
      "schedule": [
        "after 9am and before 6pm every weekday"
      ],
      "reviewers": [
        "team:store-framework"
      ],
      "pin": {
        "automerge": true
      },
      "packageRules": [
        {
          "packagePatterns": [
            "*"
          ],
          "excludePackagePatterns": [
            "^@vtex/"
          ],
          "enabled": false
        },
        {
          "enabled": true,
          "matchPackagePatterns": [
            "^@vtex/"
          ],
          "matchUpdateTypes": [
            "minor",
            "patch",
            "digest",
            "pin"
          ],
          "groupName": "Faststore Dependencies",
          "major": {
            "automerge": false
          },
          "minor": {
            "automerge": false
          },
          "patch": {
            "automerge": false
          }
        }
      ]
    }
  }
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "moduleResolution": "node",
    "jsx": "preserve",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "module": "esnext",
    "rootDir": "./",
    "baseUrl": "./",
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "src/*": ["src/*"],
      "@generated/*": ["@generated/*"],
      "@faststore/core": ["index.ts"],
      "@faststore/core/api": ["api/index.ts"],
      "@faststore/core/experimental": ["src/experimental/index.ts"],
      "@faststore/core/experimental/server": [
        "src/experimental/server/index.ts"
      ]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "incremental": true,
    "isolatedModules": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["*.d.ts", "src/**/*.ts", "src/**/*.tsx", "@generated/**/*.ts"],
  "exclude": ["node_modules", "public"]
}

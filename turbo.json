{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "OCLIF_COMPILATION",
    "NODE_ENV",
    "DISABLE_3P_SCRIPTS",
    "CMS_DATA",
    "DISCOVERY_DEBUG"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["BASE_SITE_URL"],
      "outputs": ["dist/**"]
    },
    "@vtex/faststore-api#generate": {
      "outputs": ["src/__generated__/**"],
      "cache": false
    },
    "@vtex/faststore-api#test": {
      "dependsOn": ["generate", "^build"]
    },
    "@vtex/faststore-api#build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["dist/**"]
    },
    "@vtex/faststore-core#build": {
      "dependsOn": ["^build", "generate"],
      "outputs": ["dist/**"]
    },
    "@vtex/faststore-core#generate": {
      "dependsOn": ["^build"],
      "outputs": ["@generated/**"],
      "cache": false
    },
    "@vtex/faststore-core#test": {
      "dependsOn": ["generate", "^build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:e2e": {
      "dependsOn": ["^build"]
    },
    "start": {
      "outputs": ["dist/**", ".next"]
    },
    "lint": {},
    "serve": {},
    "size": {}
  }
}

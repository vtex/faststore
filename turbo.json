{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "OCLIF_COMPILATION",
    "NODE_ENV",
    "DISABLE_3P_SCRIPTS",
    "CMS_DATA",
    "DISCOVERY_DEBUG"
  ],
  "tasks": {
    "site#build": {
      "dependsOn": ["^build"],
      "env": ["BASE_SITE_URL"],
      "outputs": [".next/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["BASE_SITE_URL"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "lint": {},
    "serve": {},
    "start": {
      "outputs": ["dist/**"]
    },
    "size": {},
    "dev": {
      "cache": false
    },
    "dev:server": {
      "cache": false
    },
    "@faststore/api#build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.graphql",
        "codegen.yml",
        "tsconfig.json"
      ],
      "outputs": ["dist/**"]
    },
    "@faststore/api#dev:graphql": {
      "outputs": ["dist/**"]
    },
    "@faststore/api#build:cjs": {
      "outputs": ["dist/**"]
    },
    "@faststore/api#build:esm": {
      "outputs": ["dist/**"]
    },
    "@faststore/core#build": {
      "dependsOn": ["^build", "@faststore/api#build"],
      "outputs": [".next/**"]
    }
  }
}
